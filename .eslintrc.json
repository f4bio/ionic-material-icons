{
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "codelyzer",
    "ionic",
    "angular",
    "standard"
  ],
  "plugins": [
    "typescript",
    "angular",
    "json",
    "node",
    "promise",
    "html",
    "standard",
    "import"
  ],
  "globals": {
    "angular": false,
    "cordova": false,
    "FCMPlugin": false,
    "ionic": false
  },
  "settings": {
    "html/report-bad-indent": 2,
    "angular": 2
  },
  "rules": {
    "angular/di": [
      "error",
      "array"
    ],
    "angular/no-service-method": 1,
    "angular/service-name": [
      "error",
      "kxt",
      {
        "oldBehavior": false
      }
    ],
    "space-before-function-paren": 0,
    "strict": 0,
    "no-multi-spaces": 0,
    "semi": [
      "error",
      "always"
    ],
    "func-style": [
      "error",
      "declaration",
      {
        "allowArrowFunctions": true
      }
    ],
    "no-shadow": 0,
    "consistent-return": 0,
    "no-this-before-super": 0,
    "no-use-before-define": 0,
    "new-parens": 2,
    "no-cond-assign": 2,
    "keyword-spacing": 0,
    "space-infix-ops": 2,
    "padded-blocks": 0,
    "object-curly-spacing": [
      "error",
      "never"
    ],
    "key-spacing": [
      2,
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-multiple-empty-lines": [
      2,
      {
        "max": 2
      }
    ],
    "quote-props": [
      2,
      "consistent-as-needed"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "eqeqeq": [
      "error",
      "smart"
    ],
    "wrap-iife": [
      2,
      "inside"
    ],
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "brace-style": [
      2,
      "1tbs"
    ],
    "spaced-comment": [
      2,
      "always",
      {
        "exceptions": [
          "-",
          "+",
          "*"
        ]
      }
    ],
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "after-used"
      }
    ]
  }
}
